<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.katipkitap">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/katip_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/katip_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".kayitlar_1"></activity>
        <activity android:name=".iade_kitap" />
        <activity android:name=".alinan_kitap" />
        <activity android:name=".kitap_iade" />
        <activity android:name=".kitap_al" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />
    </application>

</manifest>